<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bekal.mypet.MainScreen"
    tools:showIn="@layout/app_bar_main_screen">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroup" />

        <Button
            android:text="LOST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:id="@+id/lstBTN" />

        <Button
            android:text="FOUND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginEnd="36dp"
            android:layout_alignBaseline="@+id/lstBTN"
            android:layout_alignBottom="@+id/lstBTN"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="100dip"
            android:layout_height="75dip"
            app:srcCompat="@drawable/sampledog"
            android:layout_marginTop="30dp"
            android:id="@+id/imageButton3"
            android:layout_below="@+id/lstBTN"
            android:layout_alignEnd="@+id/lstBTN" />

        <TextView
            android:text="Name: doogy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/nameLBL"
            android:layout_alignTop="@+id/imageButton3" />

        <TextView
            android:text="Last Seen: Bissep Park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton3"
            android:layout_alignStart="@+id/ageLBL"
            android:id="@+id/LstSeenLBL" />

        <TextView
            android:text="Age: 6 months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageLBL"
            android:layout_above="@+id/LstSeenLBL"
            android:layout_alignStart="@+id/nameLBL"
            android:layout_marginBottom="10dp" />

</RelativeLayout>
